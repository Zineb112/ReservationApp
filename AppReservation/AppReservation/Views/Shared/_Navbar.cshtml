<!-- ======= Header ======= -->
<header id="header" class="d-flex align-items-center">
    <div class="container d-flex justify-content-between">

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a></li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a><span>Manage Reservation</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a asp-controller="Reservation" asp-action="Index">Reservation</a></li>
                            <li><a asp-controller="TypeReservation" asp-action="Index">Reservations type</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a><span>Manage Role</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a asp-controller="Role" asp-action="AddRole">Create Role</a></li>
                            <li><a asp-controller="Role" asp-action="ListRoles">All Roles</a></li>
                        </ul>
                    </li>
                    <li><a asp-controller="Reservation" asp-action="History">History</a></li>

                }
                else if (User.IsInRole("Student"))
                {

                    <li><a asp-controller="StudentReservation" asp-action="Index">Create New Reservation</a></li>
                    <li><a asp-controller="Reservation" asp-action="History">History</a></li>

                }

                <partial name="_LoginPartial" />
            </ul>

        </nav><!-- .navbar -->

    </div>
</header><!-- End Header -->